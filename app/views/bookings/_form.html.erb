<%= simple_form_for(@booking) do |f| %>
  <div class="form-inputs">
    <% if @paparazzi %>
      <%= f.association :paparazzi, selected: @paparazzi.id %>
    <% else %>
      <%= f.association :paparazzi %>
    <% end %>
      <%= f.input :booking_location %>
      <%= f.input :meeting_date, as: :datetime, order: [:day, :month, :year] %>
      <%= f.input :special_request %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-new-book" %>
  </div>
<% end %>
