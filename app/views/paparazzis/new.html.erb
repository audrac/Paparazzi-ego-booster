<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
        <div class="text-center mt-3">
          <h2>Add a New Paparazzi</h2>
        </div>

        <%= simple_form_for(@paparazzi) do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :style %>
          <%= f.input :location %>
          <%= f.input :price %>
          <%= f.input :description %>
          <%= f.input :photo, as: :file %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: "btn-new-book" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
