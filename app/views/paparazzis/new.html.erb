<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
          <div class="text-center mt-3">
          <h1>Add a New Paparazzi</h1>
          </div>
          <%= simple_form_for(@paparazzi) do |f| %>
          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :style %>
            <%= f.input :location %>
            <%= f.input :price %>
            <%= f.input :description %>
            <%= f.input :photo, as: :file %>
          </div>

          <div class="form-actions">
            <div class="form-actions-button">
                <%= f.button :submit %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
