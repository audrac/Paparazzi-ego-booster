<div>
<div class="position-sticky bg-grey">
  <div class="paparazzi-banner text-center" style="background-image: url(<%= asset_path('paparazzis-index.gif')%>);">
    <div class="container-paparazzi">
      <h1>Check out our selection of professional Paparazzi!</h1>
    </div>
  </div>

  <div class="container">
    <div class="container-paparazzi d-flex justify-content-center align-items-center">
    <div class= "row mt-4">
        <% @paparazzis.each do |paparazzi| %>
          <div class="col-md-4">
            <div class="paparazzi-card">
              <div class="paparazzi-card-image" style="background-image: url(<%= cl_image_path(paparazzi.photo.key, height: 200)%>)"></div>
                <div class="paparazzi-card-content">
                  <div>
                    <div class="paparazzi-card-title">
                    <%= link_to paparazzi_path(paparazzi), class:"text-decoration-none" do %>
                      <h4><%= paparazzi.name %></h4>
                    <% end %>
                    </div>
                    <div class="flex-align-items-center">
                      <% if paparazzi.rating != nil  %>
                        <span><strong>Rating:</strong> <% paparazzi.rating.times do %>
                        <i class="fas fa-star star-yellow"></i>
                        <% end %></span>
                      <% end %>
                    </div>
                    <div class="flex-align-items-center">
                      <span> <i class="fa-solid fa-location-dot"></i>
                       <%= paparazzi.location %></span>
                    </div>
                    <div class="flex">
                      <span> <strong> Moto:</strong> <%= paparazzi.style %></span>
                    </div>
                  </div>

                  <div class="d-flex justify-content-between">
                    <h6 class="align-self-center m-0"><i class="fa-solid fa-tag"></i>
                    Â£<strong><%=paparazzi.price %> /2h </h6></strong>
                    <%= link_to "Book!", new_booking_path, class: "btn btn-flat" %>
                  </div>
                </div>
              </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
